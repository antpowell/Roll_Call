<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:id="@+id/student_reg_constraint_layout">

    <ImageView
        android:id="@+id/student_reg_logo"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/splash_rollcall3"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0.3"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/student_reg_layout_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/student_reg_segment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="@+id/student_reg_layout_container"
            app:layout_constraintTop_toTopOf="parent"
            app:sc_border_width="2dp"
            app:sc_corner_radius="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="0dp"
            app:sc_tint_color="#009688">

            <RadioButton
                android:id="@+id/student_reg_login_segment_button"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOGIN"/>

            <RadioButton
                android:id="@+id/student_reg_register_segment_button"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REGISTER"/>

        </info.hoang8f.android.segmented.SegmentedGroup>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/student_reg_name_layout"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="@+id/student_reg_layout_container"
            app:layout_constraintLeft_toLeftOf="@+id/student_reg_layout_container"
            app:layout_constraintTop_toBottomOf="@+id/student_reg_segment">

            <EditText
                android:id="@+id/student_reg_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account"
                android:hint="Last Name"
                android:inputType="textPersonName"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/student_reg_tnum_layout"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/student_reg_name_layout"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/student_reg_layout_container"
            app:layout_constraintLeft_toLeftOf="@+id/student_reg_layout_container"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp">

            <EditText
                android:id="@+id/student_reg_tnum_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dialpad"
                android:hint="T# Numbers Only"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/student_reg_email_layout"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/student_reg_tnum_layout"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp">

            <EditText
                android:id="@+id/student_reg_email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_gmail"
                android:hint="Email"
                android:inputType="textEmailAddress"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/student_reg_password_layout"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/student_reg_email_layout"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp">
            <EditText
                android:id="@+id/student_reg_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock_outline"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/student_reg_register_button"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="7dp"
            android:enabled="false"
            android:text="REGISTER"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_reg_password_layout"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>