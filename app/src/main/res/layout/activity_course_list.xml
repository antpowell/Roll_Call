<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TSUPrimary"
    tools:context="com.egmail.anthony.powell.roll_call_2.CourseList">


    <android.support.v7.widget.SearchView
        android:id="@+id/course_list_search_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@id/course_list_recycler_view_listing"
        app:layout_constraintLeft_toRightOf="@id/course_list_search_title_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/course_list_search_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Search"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@id/course_list_search_view"
        app:layout_constraintBottom_toTopOf="@id/course_list_recycler_view_listing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

