<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egmail.anthony.powell.roll_call_2.CourseList"
    android:background="@color/TSUPrimary">



    <!--<android.support.v7.widget.SearchView-->
    <!--android:id="@+id/course_list_search_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp" />-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/course_list_search_view_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/course_list_search_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/ic_search_white_36px"
            android:drawableRight="@drawable/ic_search_white_36px"
            android:hint="Search"/>
    </android.support.design.widget.TextInputLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/course_list_recycler_view_listing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/course_list_search_view_layout"
        app:layout_constraintBottom_toTopOf="@id/course_list_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/White">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/course_list_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_list_recycler_view_listing"
        android:background="@color/TSUPrimary">
        <ImageView
            android:id="@+id/course_list_image_view_log_out"
            android:src="@drawable/ic_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/course_list_text_view_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_below="@id/course_list_image_view_log_out"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>