<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="true"
              android:orientation="vertical"
              android:weightSum="4"
              tools:context=".StudentReg">

    <!--<include-->
    <!--android:id="@+id/reg_app_bar"-->
    <!--layout="@layout/reg_app_bar" />-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reg_app_bar"
        android:layout_gravity="left"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-30dp"
        android:layout_weight="0"
        android:contentDescription="@string/welcomeLogo"
        android:src="@drawable/splash_rollcall3"
        android:visibility="visible"/>

    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/log_reg_seg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp"
        segmentedgroup:sc_tint_color="#009688">

        <RadioButton
            android:id="@+id/login_switch_segment"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LOGIN"/>

        <RadioButton
            android:id="@+id/register_switch_segment"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REGISTER"/>
    </info.hoang8f.android.segmented.SegmentedGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="0dp"
        android:gravity="top|center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/viewLastName"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_account"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/viewLastName"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp">

                <EditText
                    android:id="@+id/LastNameTextBox"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:capitalize="words"
                    android:ems="10"

                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:typeface="sans"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tnumber_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/viewTNumber"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_dialpad"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/viewTNumber"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp">

                <EditText
                    android:id="@+id/TNumberTextBox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LastNameTextBox"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/tnumberHint"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/viewEmail"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_gmail"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/viewEmail"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp">

                <EditText
                    android:id="@+id/EmailTextBox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:allowUndo="false"
                    android:ems="10"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/passowrd_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/viewPassword"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_lock_outline"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/viewPassword"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp">

                <EditText
                    android:id="@+id/PassTextBox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/EmailTextBox"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="Create Password"
                    android:inputType="textPassword"
                    android:typeface="sans"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


        <Button
            android:id="@+id/RegisterButton"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/viewPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:enabled="false"
            android:text="@string/RegButton"
            android:textAlignment="gravity"/>
    </LinearLayout>


</LinearLayout>